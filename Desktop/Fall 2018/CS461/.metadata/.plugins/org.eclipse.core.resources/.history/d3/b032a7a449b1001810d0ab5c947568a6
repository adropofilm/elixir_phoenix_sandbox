package PokerSimulation.main;

public class Card {

	private String suite;
	private String rank;
	
	public Card(String suite, String rank) {
		this.suite = suite;
		this.rank = rank;
	}
	
	// Accessors and Mutators:
	public String get_suite() 
	{
		return suite;
	}
	
	public String get_rank()
	{
		return rank;
	}
	
	public String get_card() 
	{
		return suite+rank;
	}
	
	public void set_suite(String suite)
	{
		this.suite = suite;
	}

	public void set_rank(String rank)
	{
		this.rank = rank;
	}
}
