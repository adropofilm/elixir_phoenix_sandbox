package PokerSimulation.main;

public class Card {

	private Integer suite;
	private Integer rank;
	
	public Card(Integer suite, Integer rank) {
		this.suite = suite;
		this.rank = rank;
	}

	
	// Accessors and Mutators:
	public Integer get_suite() 
	{
		return suite;
	}
	
	public Integer get_rank()
	{
		return rank;
	}
	
	
	public void set_suite(Integer suite)
	{
		this.suite = suite;
	}

	public void set_rank(Integer rank)
	{
		this.rank = rank;
	}
	
	// MISC methods:
	
	public boolean equals(Card compare_to)
	{
		return(this.get_suite() == compare_to.get_suite() && this.get_rank() == compare_to.get_rank());
	}
}
